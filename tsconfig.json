{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "__server_build__",
    "lib": [
      "es6"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "client/node_modules"
  ]
}